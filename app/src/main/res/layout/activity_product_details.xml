<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ProductDetailsActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="144dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="0dp"
                android:layout_height="420dp"
                android:src="@drawable/thumbnail_product"
                android:scaleType="centerCrop"
                android:foreground="@drawable/product_image_foreground"
                android:contentDescription="@string/app_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/product_type_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_veg"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="@id/product_image"
                app:layout_constraintEnd_toEndOf="@id/product_image"/>

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/app_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorIconLight" />

            <ImageView
                android:id="@+id/cart_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_cart"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorIconLight" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:cardCornerRadius="6dp"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="8dp"
                app:layout_constraintTop_toTopOf="@id/cart_btn"
                app:layout_constraintEnd_toEndOf="@id/cart_btn"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Product Name"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_image"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.5"
                android:text="PRODUCT-00000000"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="1 pack - 5 kilograms"
                app:layout_constraintTop_toBottomOf="@+id/product_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="₹ 200.0"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/product_unit"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAlignment="textStart"
                android:textColor="@color/errorColor"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="₹ 250.0"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintTop_toTopOf="@+id/product_price"
                app:layout_constraintBottom_toBottomOf="@+id/product_price"
                app:layout_constraintStart_toEndOf="@+id/product_price"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/product_offer_container"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="@color/successColor"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintStart_toEndOf="@id/product_mrp"
                app:layout_constraintTop_toTopOf="@id/product_price"
                app:layout_constraintBottom_toBottomOf="@id/product_price">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/product_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="32dp"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:text="25% off"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTextLight"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/product_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:textAlignment="textStart"
                android:textColor="@color/successColor"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="In Stock"
                app:layout_constraintTop_toBottomOf="@id/product_offer_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_offers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@color/colorOffer"
                app:layout_constraintTop_toBottomOf="@id/product_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/img_offer"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_offer"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/app_name"
                    app:tint="@color/colorIconLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/text_offer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorTextLight"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="Get extra 10% OFF on this product. Use promo code GTNEW10. Terms &amp; Conditions applied."
                    android:fontFamily="@font/montserrat"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_offer" />

                <TextView
                    android:id="@+id/terms_and_applied"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorTextDark"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="Learn More"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:fontFamily="@font/montserrat"
                    android:includeFontPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_offer"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SmallSp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="32dp"
                android:background="@color/colorInactive"
                app:layout_constraintTop_toBottomOf="@id/layout_offers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_product_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:text="Product Category : "
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.5"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/divider1"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="Category Name"
                app:layout_constraintTop_toTopOf="@+id/text_product_category"
                app:layout_constraintStart_toEndOf="@id/text_product_category"
                app:layout_constraintBottom_toBottomOf="@id/text_product_category"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_sold_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Sold by :"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.5"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/product_category"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/infoColor"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="ABC Groceries"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="@id/text_sold_by"
                app:layout_constraintBottom_toBottomOf="@id/text_sold_by"
                app:layout_constraintStart_toEndOf="@id/text_sold_by"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorInactive"
                app:layout_constraintTop_toBottomOf="@id/product_store_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_product_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:text="Product Details"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:alpha="0.5"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_product_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Description"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.5"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_product_details"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="No information"
                app:layout_constraintTop_toBottomOf="@+id/text_product_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_product_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Brand"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.5"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_description"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="No information"
                app:layout_constraintTop_toBottomOf="@+id/text_product_brand"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_product_mfg_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="MFG Date"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.5"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_brand"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_mfg_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="No information"
                app:layout_constraintTop_toBottomOf="@+id/text_product_mfg_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_product_best_before"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Best Before"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.5"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_mfg_date"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/product_best_before"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorTextDark"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="No information"
                app:layout_constraintTop_toBottomOf="@+id/text_product_best_before"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_to_cart_btn_container"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardPreventCornerOverlap="true"
        android:elevation="8dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_to_cart_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:drawableStart="@drawable/ic_cart"
                android:drawableTint="@color/colorIconDark"
                android:drawablePadding="16dp"
                android:includeFontPadding="false"
                android:text="Add to Cart"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>