<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/click_listener"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/product_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20% off"
            android:textColor="@color/colorIconLight"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            android:background="@color/successColor"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_image"/>

        <ImageView
            android:id="@+id/product_type_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_veg"
            android:scaleType="centerCrop"
            android:elevation="8dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@id/product_image"
            app:layout_constraintEnd_toEndOf="@id/product_image"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            android:text="Product Name"
            android:textColor="@color/colorTextDark"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_image" />

        <TextView
            android:id="@+id/product_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:text="5 kilograms"
            android:textColor="@color/colorTextDark"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:textAlignment="textStart"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:alpha="0.5"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/product_mrp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="₹ 240"
            android:textColor="@color/colorTextDark"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:textSize="11sp"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_unit"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="8dp"
            android:text="₹ 200"
            android:textColor="@color/colorTextDark"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_mrp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_to_cart_btn_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_to_cart_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add"
                    android:scaleType="centerCrop"
                    app:tint="@color/colorIconLight"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>