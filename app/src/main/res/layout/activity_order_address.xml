<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".OrderAddressActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@id/proceed_btn_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/app_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorIconDark" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="Checkout (1/3)"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/colorTextDark"
                android:textSize="20sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/back_btn"
                app:layout_constraintStart_toEndOf="@id/back_btn"
                app:layout_constraintTop_toTopOf="@id/back_btn" />

            <androidx.cardview.widget.CardView
                android:id="@+id/view1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/colorIconDark"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/back_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_view1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pending"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/app_name"
                        app:tint="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="Delivery\nAddress"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@id/view1"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintEnd_toEndOf="@id/view1"/>

            <View
                android:id="@+id/view_between1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:alpha="0.25"
                app:layout_constraintEnd_toStartOf="@id/view2"
                app:layout_constraintStart_toEndOf="@id/view1"
                app:layout_constraintTop_toTopOf="@id/view1"
                app:layout_constraintBottom_toBottomOf="@id/view2"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/view2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="32dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/colorViews"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/back_btn"
                app:layout_constraintEnd_toStartOf="@id/view3"
                app:layout_constraintStart_toEndOf="@id/view1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_view2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pending"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/app_name"
                        app:tint="@color/colorIconDark"
                        android:alpha="0.25"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="Order\nSummary"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.25"
                app:layout_constraintStart_toStartOf="@id/view2"
                app:layout_constraintTop_toBottomOf="@id/view2"
                app:layout_constraintEnd_toEndOf="@id/view2"/>

            <View
                android:id="@+id/view_between2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:alpha="0.25"
                app:layout_constraintStart_toEndOf="@id/view2"
                app:layout_constraintEnd_toStartOf="@id/view3"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintBottom_toBottomOf="@id/view3"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/view3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/colorViews"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/back_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_view3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pending"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/app_name"
                        app:tint="@color/colorIconDark"
                        android:alpha="0.25"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_placed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="Order\nPlaced"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:alpha="0.25"
                app:layout_constraintStart_toStartOf="@id/view3"
                app:layout_constraintTop_toBottomOf="@id/view3"
                app:layout_constraintEnd_toEndOf="@id/view3"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="40dp"
                android:hint="Name*"
                android:textColorHint="@color/colorTextDark"
                app:boxBackgroundColor="@color/colorBackground"
                app:boxStrokeColor="@color/colorIconDark"
                app:boxStrokeWidthFocused="1dp"
                app:boxStrokeErrorColor="@color/errorColor"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorIconDark"
                app:errorIconTint="@color/errorColor"
                app:errorTextColor="@color/errorColor"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="@color/colorInactive"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_address">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/montserrat"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:includeFontPadding="false"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:hint="Mobile*"
                android:textColorHint="@color/colorTextDark"
                app:boxBackgroundColor="@color/colorBackground"
                app:boxStrokeColor="@color/colorIconDark"
                app:boxStrokeWidthFocused="1dp"
                app:boxStrokeErrorColor="@color/errorColor"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:counterOverflowTextColor="@color/errorColor"
                app:counterTextColor="@color/colorInactive"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorIconDark"
                app:errorIconTint="@color/errorColor"
                app:errorTextColor="@color/errorColor"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="@color/colorInactive"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:prefixText="+91"
                app:prefixTextColor="@color/colorInactive">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/montserrat"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:includeFontPadding="false"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="40dp"
                android:hint="Delivery Address*"
                android:textColorHint="@color/colorTextDark"
                app:boxBackgroundColor="@color/colorBackground"
                app:boxStrokeColor="@color/colorIconDark"
                app:boxStrokeWidthFocused="1dp"
                app:boxStrokeErrorColor="@color/errorColor"
                app:errorIconTint="@color/errorColor"
                app:errorTextColor="@color/errorColor"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="@color/colorInactive"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobile">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/montserrat"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:includeFontPadding="false"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:singleLine="false"
                    android:ellipsize="end"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/change_address_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="4dp"
                android:text="Change Address"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address" />

            <ImageView
                android:id="@+id/know_more_btn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_info"
                app:tint="@color/infoColor"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="@id/change_address_btn"
                app:layout_constraintBottom_toBottomOf="@id/change_address_btn"
                app:layout_constraintStart_toEndOf="@id/change_address_btn"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@color/bottomSheetColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/change_address_btn">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/instructions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputLayoutAppearance"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    android:hint="Add instructions (optional)"
                    android:textColorHint="@color/colorTextDark"
                    app:boxBackgroundColor="@color/bottomSheetColor"
                    app:boxStrokeColor="@color/colorIconDark"
                    app:boxStrokeWidthFocused="1dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorIconDark"
                    app:errorIconTint="@color/errorColor"
                    app:errorTextColor="@color/errorColor"
                    app:boxStrokeErrorColor="@color/errorColor"
                    app:counterEnabled="true"
                    app:counterMaxLength="200"
                    app:counterOverflowTextColor="@color/errorColor"
                    app:counterTextColor="@color/colorTextDark"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:cursorVisible="true"
                        android:fontFamily="@font/montserrat"
                        android:imeOptions="actionDone"
                        android:includeFontPadding="false"
                        android:inputType="textMultiLine"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTextDark"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:importantForAutofill="no"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/instructions"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                app:layout_constraintTop_toTopOf="@id/layout_instructions"
                app:layout_constraintBottom_toTopOf="@id/layout_instructions"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/colorTextDark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Select Payment Method"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_instructions"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/payment_method_chip_group"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:nestedScrollingEnabled="true"
                app:chipSpacingHorizontal="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/online_payment_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Online Payment"
                    android:textAppearance="@style/ChipText"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipCornerRadius="8dp"
                    app:chipEndPadding="8dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="8dp"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colorAccent" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/cash_on_delivery_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Pay on Delivery"
                    android:textAppearance="@style/ChipText"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipCornerRadius="8dp"
                    app:chipEndPadding="8dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="8dp"
                    app:chipStrokeColor="@color/chip_stroke_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colorAccent" />

            </com.google.android.material.chip.ChipGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@color/colorViews"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/payment_method_chip_group"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_cancellation_policy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_terms"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/policy"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/app_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTextDark"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:text="Review your order and address details to avoid cancellations"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_terms"
                        app:layout_constraintTop_toTopOf="@id/img_terms"/>

                    <ImageView
                        android:id="@+id/img_clock"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/ic_clock"
                        android:scaleType="centerCrop"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="@string/app_name"
                        app:layout_constraintTop_toBottomOf="@id/img_terms"
                        app:layout_constraintStart_toStartOf="@id/img_terms"
                        app:layout_constraintEnd_toEndOf="@id/img_terms"/>

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTextDark"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:alpha="0.75"
                        android:text="If you choose to cancel, you can do it within 60 minutes after placing the order."
                        app:layout_constraintEnd_toEndOf="@id/text3"
                        app:layout_constraintStart_toStartOf="@id/text3"
                        app:layout_constraintTop_toTopOf="@id/img_clock"/>

                    <ImageView
                        android:id="@+id/img_rupee"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_rupee"
                        android:scaleType="centerCrop"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="@string/app_name"
                        app:layout_constraintTop_toBottomOf="@id/img_clock"
                        app:layout_constraintStart_toStartOf="@id/img_terms"
                        app:layout_constraintEnd_toEndOf="@id/img_terms"/>

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="0dp"
